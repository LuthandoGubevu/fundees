
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    // Users can read their own profile.
    // Users can create their own profile upon signup.
    // Users can update their own profile.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // STORIES
    // Anyone can read stories.
    // Logged-in users can create stories for themselves.
    match /stories/{storyId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      
      // Allow a logged-in user to update the 'likes' count of any story.
      // Do not allow other fields to be updated.
      allow update: if request.auth != null 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']);

      // LIKES SUBCOLLECTION
      // A user can only create or delete their own like document.
      match /likes/{likerId} {
         allow create, delete: if request.auth != null && request.auth.uid == likerId;
         allow read: if true;
      }
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only be created by new users, and can only be read/updated by themselves.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Stories can be read by any authenticated user.
    // Stories can only be created, updated, or deleted by their author.
    match /stories/{storyId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;

      // Likes can be created or deleted by any authenticated user.
      match /likes/{userId} {
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection
    // - Anyone can create a new user document during sign-up.
    // - Authenticated users can only read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if true;
    }

    // Stories Collection
    // - Anyone can read stories (public library).
    // - Only authenticated users can create new stories, and they must be the author.
    // - Any authenticated user can update a story (to allow for liking).
    // - Only the original author can delete their story.
    match /stories/{storyId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;

      // Likes Subcollection
      // - Authenticated users can read likes.
      // - A user can only create or delete their own 'like' document.
      match /likes/{userId} {
        allow read: if request.auth != null;
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    match /users/{userId} {
      // Any logged-in user can read another user's public profile data.
      allow read: if request.auth != null;
      // A user can create their own profile document if their UID matches.
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can only update or delete their own profile.
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // STORIES
    match /stories/{storyId} {
      // Anyone can read a single story, and logged-in users can query the list.
      allow get;
      allow list: if request.auth != null;

      // Logged-in users can create stories for themselves.
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;

      // Only the story author can update or delete their story.
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }
    
    // LIKES SUBCOLLECTION
    match /stories/{storyId}/likes/{likerId} {
        // A logged-in user can create or delete their own like document.
        allow read, write: if request.auth != null && request.auth.uid == likerId;
    }
  }
}

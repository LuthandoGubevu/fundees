rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and update their own profile.
    // New users can be created by anyone (for sign-up, if authenticated).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Stories can be read by anyone.
    match /stories/{storyId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Users can only update the story if they are the author (e.g. for likes).
      allow update: if request.auth != null;
      
      // Likes can be created or deleted by any authenticated user.
      match /likes/{userId} {
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
